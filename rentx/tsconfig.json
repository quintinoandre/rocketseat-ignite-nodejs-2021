{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"rootDir": "./",
		"baseUrl": "./src",
		"paths": {
			"@config/*": ["config/*"],
			"@modules/*": ["modules/*"],
			"@shared/*": ["shared/*"],
			"@utils/*": ["utils/*"]
		},
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	}
}
